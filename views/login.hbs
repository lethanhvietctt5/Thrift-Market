<form action="/login" method="POST" class="login flex justify-center items-center mt-10">
  <div class="w-1/2 sm:w-1/3 lg:w-1/4 text-gray-800 text-sm font-medium">
    <div class="flex justify-center mb-4"><span class="text-2xl sm:text-4xl">Đăng nhập</span></div>
    <div class="flex justify-center items-center">
      <div class="mb-4 w-full">
        <div class="mb-1">Email</div>
        <input type="text" name="email" id="email" class="w-full h-10 p-2 focus:outline-none border-2 rounded" placeholder="levanviet@outlook.com">
      </div>
    </div>
    <div class="flex justify-center items-center">
      <div class="mb-4 w-full">
        <div class="mb-1">Mật khẩu</div>
        <input type="password" name="password" id="password" class="w-full h-10 p-2 focus:outline-none border-2 rounded" placeholder="********">
        <span class="text-xs text-gray-400 italic">*Mật khẩu phải gồm ít nhất 8 ký tự</span>
      </div>
    </div>
    <div class="flex justify-center items-center mt-6">
      <button type="submit" class="bg-green-600 py-2 px-4 text-white rounded-lg focus:outline-none">Đăng nhập</button>
    </div>
  </div>
</form>
{{#section "js"}}
  <script type="text/javascript" src="/js/login.js"></script>
{{/section}}