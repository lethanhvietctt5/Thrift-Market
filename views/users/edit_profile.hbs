<div class="flex justify-center items-center">
  <div class="w-2/3">
    <div class="flex items-center mt-10 text-gray-700">
      <div class="mr-3 hover:text-green-600">
        <a href="/">Trang chủ</a>
      </div>
      <div class="mr-3">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          aria-hidden="true"
          role="img"
          class="iconify iconify--mdi"
          width="20"
          height="20"
          preserveAspectRatio="xMidYMid meet"
          viewBox="0 0 24 24"
        >
          <path
            d="M5.5 4.14l-1 1.72L15 12L4.5 18.14l1 1.72L19 12L5.5 4.14z"
            fill="currentColor"
          >
          </path>
        </svg>
      </div>
      <div>Chỉnh sửa thông tin cá nhân</div>
    </div>
    <form
      action="/{{session.user._id}}/edit_profile"
      method="POST"
      class="edit_profile mt-10"
    >
      <div class="w-1/2 sm:w-1/3 lg:w-1/4 text-gray-800 text-sm font-medium">
        <!--Họ tên-->
        <div class="flex justify-center items-center">
          <div class="mb-4 w-full">
            <div class="mb-1">Họ tên</div>
            <input
              type="text"
              name="name"
              id="name"
              value="{{session.user.name}}"
              class="w-full h-10 p-2 focus:outline-none focus:ring focus:ring-gray-100 border-2 rounded"
              placeholder="Lê Văn Việt"
            />
          </div>
        </div>
        <!--Email-->
        <div class="flex justify-center items-center">
          <div class="mb-4 w-full text-gray-400">
            <div class="mb-1">Email</div>
            <input
              type="text"
              name="email"
              disabled="disabled"
              id="email"
              value="{{session.user.email}}"
              class="w-full h-10 p-2 focus:outline-none focus:ring focus:ring-gray-100 border-2 rounded"
              placeholder="levanviet@outlook.com"
            />
          </div>
        </div>
        <!--Ngày tháng năm sinh-->
        <div class="flex justify-center items-center">
          <div class="mb-4 w-full">
            <div class="mb-1">Ngày sinh</div>
            <div class="birth_string hidden">{{session.user.birth}}</div>
            <input
              type="date"
              name="birth"
              id="birth"
              class="w-full birth h-10 p-2 focus:outline-none focus:ring focus:ring-gray-100 border-2 rounded"
            />
          </div>
        </div>
        <!--Số điện thoại-->
        <div class="flex justify-center items-center">
          <div class="mb-4 w-full">
            <div class="mb-1">Số ĐT</div>
            <input
              type="text"
              name="phone"
              id="phone"
              value="{{session.user.phone}}"
              class="w-full h-10 p-2 focus:outline-none focus:ring focus:ring-gray-100 border-2 rounded"
              placeholder="0902794731"
            />
          </div>
        </div>
        <!--Giới tính-->
        <div class="flex justify-center items-center">
          <div class="mb-4 w-full">
            <div class="mb-1">Giới tính</div>
            {{#ifEquals session.user.gender "Nam"}}
              <div class="w-full flex justify-start">
                <div class="flex justify-center items-center">
                  <input
                    type="radio"
                    name="gender"
                    id="male"
                    value="Nam"
                    checked="true"
                    class="h-10 p-2 checked:text-green-600 focus:text-green-600 focus:outline-none border-2 rounded"
                  />
                  <label for="male" class="ml-2">Nam</label>
                </div>
                <div class="flex justify-center items-center ml-4">
                  <input
                    type="radio"
                    name="gender"
                    id="female"
                    value="Nữ"
                    class="h-10 p-2 focus:text-green-600 focus:outline-none border-2 rounded"
                  />
                  <label for="female" class="ml-2">Nữ</label>
                </div>
              </div>
            {{else}}
              <div class="w-full flex justify-start">
                <div class="flex justify-center items-center">
                  <input
                    type="radio"
                    name="gender"
                    id="male"
                    value="Nam"
                    class="h-10 p-2 checked:text-green-600 focus:text-green-600 focus:outline-none border-2 rounded"
                  />
                  <label for="male" class="ml-2">Nam</label>
                </div>
                <div class="flex justify-center items-center ml-4">
                  <input
                    type="radio"
                    name="gender"
                    id="female"
                    checked="true"
                    value="Nữ"
                    class="h-10 p-2 focus:text-green-600 focus:outline-none border-2 rounded"
                  />
                  <label for="female" class="ml-2">Nữ</label>
                </div>
              </div>
            {{/ifEquals}}

          </div>
        </div>
        <div class="flex justify-center items-center mt-6">
          <button
            type="submit"
            class="bg-green-600 py-2 px-4 mb-10 text-white rounded-lg focus:outline-none"
          >Lưu</button>
        </div>
      </div>
    </form>
    {{#section "js"}}
      <script type="text/javascript" src="/js/users/edit_profile.js"></script>
    {{/section}}
  </div>
</div>