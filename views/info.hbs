<div class="w-8/12 mx-auto h-full border border-gray-200 flex">
  <div class="w-8/12 h-full mt-12">
    <div class="carousel w-full h-96 ">
      <div class="slider w-full h-5/6 bg-gray-200 relative">

        <div class="slider-back absolute h-full left-0 w-16 flex justify-center items-center hover:bg-gray-400">
          <span><i class="text-3xl opacity-30 fas fa-angle-left"></i></span>
        </div>
        <div class="slider-next absolute h-full right-0 w-16 flex justify-center items-center hover:bg-gray-400">
          <span><i class="text-3xl opacity-30 fas fa-angle-right"></i></span>
        </div>
      </div>
      <div class="paging h-1/6 flex justify-center items-center">
        <button class="bg-gray-800 rounded-full w-4 p-2 mx-2"></button>
        <button class="bg-gray-300 rounded-full w-4 p-2 mx-2"></button>
      </div>
    </div>
    <div class="details w-full h-full">
      <div class="title flex">
        <div class="ml-4">
          <div class="name text-xl font-semibold">Tên sản phẩm</div>
          <div class="price text-red-600">Giá</div>
        </div>
        <div></div>
      </div>
      <div class="description flex mt-12">
        Thông tin chi tiết...
      </div>
    </div>
  </div>
  <div class="w-4/12 mt-12 ">
    <div class="info-shop h-16 m-4 flex">
      <div class="w-1/6 avatar rounded-full m-1 my-auto bg-gray-400"></div>
      <div class="w-1/2 h-4/5 m-1 my-auto">Tên cửa hàng</div>
      <div class="w-1/3 h-4/5 m-1 my-auto flex">
        <button class=" hover:bg-green-800 text-white font-bold text-xs py-2 px-4 rounded m-auto">Xem
          shop</button>
      </div>
    </div>
    <div class="rate h-16 m-4 flex">
      <div class="w-full h-4/5 m-1 my-auto">
        <div class="text-center">Cửa hàng</div>
        <div class="flex justify-center mt-1 text-xl"><i class="fas fa-store-alt text-green-600"></i></div>
      </div>
    </div>
    <div class="mess h-12 m-4 border rounded font-semibold border-green-600 text-green-600 flex justify-center items-center">Chat với người bán<span class="ml-3 text-xl"><i
          class="far fa-comment-dots"></i></span></div>
  </div>
</div>

{{#section "js"}}
<script type="text/javascript" src="/js/info.js"></script>
{{/section}}