  <body class="h-screen">
    <!--Header-->
    <div class="flex justify-center items-center">
      <div
        class="w-full max-w-screen-xl h-14 flex justify-center items-center mt-5 pb-5 border-b-2 text-gray-500"
      >
        <div
          class="w-full mx-5 xl:w-10/12 flex justify-between items-center font-normal"
        >
          <div class="w-10/12 lg:w-4/5 flex justify-start items-center">
            <div
              class="text-4xl mr-10 xl:mr-20 font-extrabold text-green-600"
            ><a href="/">Thrift Market</a></div>
            {{#if session.user.isAdmin}}
              <div
                class="w-1/2 xl:w-3/5 flex justify-between text-base hidden md:flex"
              >
                <div class="cursor-pointer hover:underline"><a href="/">Trang
                    chủ</a></div>
                <div class="cursor-pointer hover:underline">Quản lý bài đăng</div>
                <div class="cursor-pointer hover:underline"><a
                    href="/admin/users"
                  >Quản lý người dùng</a></div>
              </div>
            {{else}}
              <div
                class="w-1/2 xl:w-2/5 flex justify-between text-base hidden md:flex"
              >
                <div class="cursor-pointer hover:underline"><a href="/">Trang
                    chủ</a></div>
                <div class="cursor-pointer hover:underline">Quản lý bài đăng</div>
                <div class="cursor-pointer hover:underline"><a
                    href="/message"
                  >Tin nhắn</a></div>
              </div>
            {{/if}}

          </div>
          {{#if session.user}}
            <div
              class="w-1/5 flex justify-end items-center text-base hidden lg:flex"
            >
              <div
                class="w-full flex justify-end items-center text-base hidden lg:flex"
              >
                {{#if session.user.isAdmin}}{{else}}
                  <div class="flex justify-center mr-2">
                    <a href="/{{session.user._id}}">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        xmlns:xlink="http://www.w3.org/1999/xlink"
                        aria-hidden="true"
                        role="img"
                        class="iconify iconify--ph"
                        width="32"
                        height="32"
                        preserveAspectRatio="xMidYMid meet"
                        viewBox="0 0 256 256"
                      >
                        <path
                          d="M232 128a104 104 0 1 0-174.18 76.681a7.963 7.963 0 0 0 1.326 1.19a103.785 103.785 0 0 0 137.712-.004a7.957 7.957 0 0 0 1.317-1.181A103.746 103.746 0 0 0 232 128zm-192 0a88 88 0 1 1 153.758 58.41a79.56 79.56 0 0 0-36.056-28.745a48 48 0 1 0-59.404 0a79.56 79.56 0 0 0-36.056 28.745A87.638 87.638 0 0 1 40 128zm56-8a32 32 0 1 1 32 32a32.036 32.036 0 0 1-32-32zm-21.917 77.499a64.022 64.022 0 0 1 107.834 0a87.814 87.814 0 0 1-107.834 0z"
                          fill="currentColor"
                        ></path>
                      </svg>
                    </a>
                  </div>
                {{/if}}
                <div class="w-1/2"><a
                    href="/logout"
                    class="hover:underline"
                  >Đăng xuất</a></div>
              </div>
            </div>
          {{else}}
            <div
              class="w-1/5 flex justify-around items-center text-base hidden lg:flex"
            >
              <div class="w-1/2"><a href="/login" class="hover:underline">Đăng
                  nhập</a></div>
              <div
                class="bg-green-600 p-2 text-white w-1/2 flex justify-center rounded-lg"
              >
                <a href="/register">Đăng ký</a>
              </div>
            </div>
          {{/if}}
          <!--Dropdown menu-->
          <div class="relative z-10 inline-block text-left lg:hidden">
            <div>
              <button
                type="button"
                class="menu close text-xs inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-2 py-1 bg-white text-gray-700 hover:bg-gray-50 focus:outline-none"
                id="menu-button"
                aria-expanded="true"
                aria-haspopup="true"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  xmlns:xlink="http://www.w3.org/1999/xlink"
                  aria-hidden="true"
                  role="img"
                  class="iconify iconify--mdi"
                  width="32"
                  height="32"
                  preserveAspectRatio="xMidYMid meet"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M3 6h18v2H3V6m0 5h18v2H3v-2m0 5h18v2H3v-2z"
                    fill="currentColor"
                  ></path>
                </svg>
              </button>
            </div>
            <div
              class="submenu hidden origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 divide-y divide-gray-100 focus:outline-none"
              role="menu"
              aria-orientation="vertical"
              aria-labelledby="menu-button"
              tabindex="-1"
            >
              <div class="py-1" role="none">
                {{#if session.user}}
                  {{#if session.user.isAdmin}}{{else}}
                    <a
                      href="/{{session.user._id}}"
                      class="text-gray-700 block px-4 py-2 text-sm hover:bg-green-500"
                      role="menuitem"
                      tabindex="-1"
                      id="menu-item-0"
                    >Trang cá nhân</a>
                  {{/if}}
                {{else}}
                  <a
                    href="/login"
                    class="text-gray-700 block px-4 py-2 text-sm hover:bg-green-500"
                    role="menuitem"
                    tabindex="-1"
                    id="menu-item-0"
                  >Đăng nhập</a>
                  <a
                    href="/register"
                    class="text-gray-700 block px-4 py-2 text-sm hover:bg-green-500"
                    role="menuitem"
                    tabindex="-1"
                    id="menu-item-1"
                  >Đăng ký</a>
                {{/if}}
              </div>
              {{#if session.user}}
                <div class="py-1 md:hidden" role="none">
                  {{#if session.user.isAdmin}}
                    <a
                      href="/admin/posts"
                      class="text-gray-700 block px-4 py-2 text-sm hover:bg-green-500"
                      role="menuitem"
                      tabindex="-1"
                      id="menu-item-4"
                    >Quản lý bài đăng</a>
                    <a
                      href="/admin/users"
                      class="text-gray-700 block px-4 py-2 text-sm hover:bg-green-500"
                      role="menuitem"
                      tabindex="-1"
                      id="menu-item-5"
                    >Quản lý người dùng</a>
                  {{else}}
                    <a
                      href="#"
                      class="text-gray-700 block px-4 py-2 text-sm hover:bg-green-500"
                      role="menuitem"
                      tabindex="-1"
                      id="menu-item-4"
                    >Quản lý bài đăng</a>
                    <a
                      href="/message"
                      class="text-gray-700 block px-4 py-2 text-sm hover:bg-green-500"
                      role="menuitem"
                      tabindex="-1"
                      id="menu-item-5"
                    >Tin nhắn</a>
                  {{/if}}
                </div>
                <div class="py-1" role="none">
                  <a
                    href="/logout"
                    class="text-gray-700 block px-4 py-2 text-sm hover:bg-green-500"
                    role="menuitem"
                    tabindex="-1"
                    id="menu-item-6"
                  >Đăng xuất</a>
                </div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--Search bar and post button-->
    <div class="flex justify-center items-center bg-gray-800">
      <div class="w-full max-w-screen-xl flex justify-center items-center">
        <div class="w-1/2 flex justify-start my-5">
          <div
            class="flex justify-center items-center bg-white rounded-l-lg pl-2 text-gray-400"
          >
