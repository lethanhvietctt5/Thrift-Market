<div class="w-full flex justify-center items-center pt-10 pb-20">
  <div id="wrapper_users" class="w-8/12">
    <table id="users_table">
      <thead>
        <tr>
          <th>Họ tên</th>
          <th>Email</th>
          <th>Số bài đăng</th>
          <th>Khóa</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
          <tr>
            <td><a
                href="/admin/users/{{this.id}}"
                class="hover:text-green-600"
              >{{this.name}}</a></td>
            <td>{{this.email}}</td>
            <td>{{this.numberOfPost}}</td>
            <td id="last_col">
              {{#if this.isBanned}}
                <a href="/admin/users/unban/{{this.id}}" class="text-red-400">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    xmlns:xlink="http://www.w3.org/1999/xlink"
                    aria-hidden="true"
                    role="img"
                    class="iconify iconify--mdi"
                    width="32"
                    height="32"
                    preserveAspectRatio="xMidYMid meet"
                    viewBox="0 0 24 24"
                  ><path
                      d="M22 17v-.5a2.5 2.5 0 0 0-5 0v.5c-.55 0-1 .45-1 1v4c0 .55.45 1 1 1h5c.55 0 1-.45 1-1v-4c0-.55-.45-1-1-1m-1 0h-3v-.5c0-.83.67-1.5 1.5-1.5s1.5.67 1.5 1.5v.5M8 8c0-2.21 1.79-4 4-4s4 1.79 4 4s-1.79 4-4 4s-4-1.79-4-4m6 12H4v-2c0-2.21 3.58-4 8-4c1.27 0 2.46.15 3.53.41c-.21.41-.38.84-.46 1.3c-.65.55-1.07 1.37-1.07 2.29v2z"
                      fill="currentColor"
                    ></path></svg>
                </a>
              {{else}}
                <a href="/admin/users/ban/{{this.id}}" class="text-green-600">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    xmlns:xlink="http://www.w3.org/1999/xlink"
                    aria-hidden="true"
                    role="img"
                    class="iconify iconify--mdi"
                    width="32"
                    height="32"
                    preserveAspectRatio="xMidYMid meet"
                    viewBox="0 0 24 24"
                  ><path
                      d="M22 17v-.5a2.5 2.5 0 0 0-5 0v.5c-.55 0-1 .45-1 1v4c0 .55.45 1 1 1h5c.55 0 1-.45 1-1v-4c0-.55-.45-1-1-1m-1 0h-3v-.5c0-.83.67-1.5 1.5-1.5s1.5.67 1.5 1.5v.5M8 8c0-2.21 1.79-4 4-4s4 1.79 4 4s-1.79 4-4 4s-4-1.79-4-4m6 12H4v-2c0-2.21 3.58-4 8-4c1.27 0 2.46.15 3.53.41c-.21.41-.38.84-.46 1.3c-.65.55-1.07 1.37-1.07 2.29v2z"
                      fill="currentColor"
                    ></path></svg>
                </a>
              {{/if}}

            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

{{#section "js"}}
  <script src="https://unpkg.com/jquery/dist/jquery.min.js"></script>
  <script
    src="https://unpkg.com/gridjs-jquery/dist/gridjs.production.min.js"
  ></script>
  <link
    rel="stylesheet"
    type="text/css"
    href="https://unpkg.com/gridjs/dist/theme/mermaid.min.css"
  />
  <script type="text/javascript" src="/js/admin/users.js"></script>
{{/section}}