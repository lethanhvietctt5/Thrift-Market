            {{#each categories}}
                <div class="hover:text-green-800 transform hover:scale-110 transition duration-300 ease-in-out">
                    <div>
                        <img src="{{this.img}}" alt="" class="cursor-pointer">
                    </div>
                    <div class="flex justify-center items-center">
                        <a class="text-sm text-white font-medium mt-4" href="#">{{this.name}}</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
