<form action="/register" method="POST" class="register flex justify-center items-center mt-10">
  <div class="w-1/2 sm:w-1/3 lg:w-1/4 text-gray-800 text-sm font-medium">
    <div class="flex justify-center mb-4"><span class="text-2xl sm:text-4xl">Đăng ký</span></div>
    <!--Họ tên-->
    <div class="flex justify-center items-center">
      <div class="mb-4 w-full">
        <div class="mb-1">Họ tên</div>
        <input type="text" name="name" id="name" class="w-full h-10 p-2 focus:outline-none focus:ring focus:ring-gray-100 border-2 rounded" placeholder="Lê Văn Việt">
      </div>
    </div>
    <!--Email-->
    <div class="flex justify-center items-center">
      <div class="mb-4 w-full">
        <div class="mb-1">Email</div>
        <input type="text" name="email" id="email" class="w-full h-10 p-2 focus:outline-none focus:ring focus:ring-gray-100 border-2 rounded" placeholder="levanviet@outlook.com">
      </div>
    </div>
    <!--Ngày tháng năm sinh-->
    <div class="flex justify-center items-center">
      <div class="mb-4 w-full">
        <div class="mb-1">Ngày sinh</div>
        <input type="date" name="birth" id="birth" class="w-full h-10 p-2 focus:outline-none focus:ring focus:ring-gray-100 border-2 rounded">
      </div>
    </div>
    <!--Số điện thoại-->
    <div class="flex justify-center items-center">
      <div class="mb-4 w-full">
        <div class="mb-1">Số ĐT</div>
        <input type="text" name="phone" id="phone" class="w-full h-10 p-2 focus:outline-none focus:ring focus:ring-gray-100 border-2 rounded" placeholder="0902794731">
      </div>
    </div>
    <!--Giới tính-->
    <div class="flex justify-center items-center">
      <div class="mb-4 w-full">
        <div class="mb-1">Giới tính</div>
        <div class="w-full flex justify-start">
          <div class="flex justify-center items-center">
            <input type="radio" name="gender" id="male" value="Nam" class="h-10 p-2 checked:text-green-600 focus:text-green-600 focus:outline-none border-2 rounded">
            <label for="male" class="ml-2">Nam</label>
          </div>
          <div class="flex justify-center items-center ml-4">
            <input type="radio" name="gender" id="female" value="Nữ" class="h-10 p-2 focus:text-green-600 focus:outline-none border-2 rounded">
            <label for="female" class="ml-2">Nữ</label>
          </div>
        </div>
      </div>
    </div>
    <!--Password-->
    <div class="flex justify-center items-center">
      <div class="mb-4 w-full">
        <div class="mb-1">Mật khẩu</div>
        <input type="password" name="password" id="password" class="w-full h-10 p-2 focus:outline-none focus:ring focus:ring-gray-100 border-2 rounded" placeholder="********">
        <span class="text-xs text-gray-400 italic">*Mật khẩu phải gồm ít nhất 8 ký tự</span>
      </div>
    </div>
    <!--Repassword-->
    <div class="flex justify-center items-center">
      <div class="mb-4 w-full">
        <div class="mb-1">Nhập lại mật khẩu</div>
        <input type="password" name="password2" id="password2" class="w-full h-10 p-2 focus:outline-none focus:ring focus:ring-gray-100 border-2 rounded" placeholder="********">
      </div>
    </div>
    <div class="flex justify-center items-center mt-6">
      <button type="submit" class="bg-green-600 py-2 px-4 mb-10 text-white rounded-lg focus:outline-none">Đăng ký</button>
    </div>
  </div>
</form>
{{#section "js"}}
  <script type="text/javascript" src="/js/register.js"></script>
{{/section}}